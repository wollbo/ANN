%% main
clear all
close all

%Generate Data
mean = [1 2;5 7;-2 -5];
sigma = [1 0.8;0.5 2; 2 6];
datapoints = 100;

[data target] = generateData(datapoints,mean,sigma);

scatter(data(:,1),data(:,2),target.^3)

%%
nodes = 3
weightMatrix = 0.01*rand(nodes,size(data,2),2);
weightMatrixDelta = zeros(size(weightMatrix));
alpha = 0.9;
eta = 0.1;

for k = 1:100
%Forward Pass
    [a,y] = forward(weightMatrix,input);
%Error Backpropagation
    delta = backward(targets,weightMatrix,y,a);
%Weight update
    weightMatrixDelta = update(weightMatrix,eta,alpha,delta,y,weightMatrixDelta);
    weightMatrix = weightMatrix + weightMatrixDelta;
end
